{
  "family": "sudexpert-backend-task",
  "containerDefinitions": [
    {
      "name": "sudexpert-backend",
      "image": "<YOUR_ECR_IMAGE_URI>:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ],
      "environment": [
        {
          "name": "DB_URL",
          "value": "<YOUR_RDS_ENDPOINT>"
        },
        {
          "name": "DB_USERNAME",
          "value": "<YOUR_DB_USERNAME>"
        },
        {
          "name": "DB_PASSWORD",
          "value": "<YOUR_DB_PASSWORD>"
        },
        {
          "name": "JWT_SECRET",
          "value": "<YOUR_JWT_SECRET>"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/sudexpert-backend",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "cpu": "256",
  "memory": "512",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "executionRoleArn": "<YOUR_EXECUTION_ROLE_ARN>",
  "taskRoleArn": "<YOUR_TASK_ROLE_ARN>"
}
